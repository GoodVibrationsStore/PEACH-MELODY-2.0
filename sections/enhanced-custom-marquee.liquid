{% comment %}
  Enhanced Customizable Marquee Section
  Now supports background gradient, font weight, letter spacing, uppercase, and more.
{% endcomment %}

<section class="custom-marquee-section" style="background: {{ section.settings.bg_gradient | default: section.settings.bg_color }};">
  <div class="page-width">
    <marquee3k class="custom-marquee" speed="{{ section.settings.speed }}">
      <span style="color: {{ section.settings.text_color }};
                   font-size: {{ section.settings.font_size }};
                   font-family: {{ section.settings.font_family }};
                   font-weight: {{ section.settings.font_weight }};
                   letter-spacing: {{ section.settings.letter_spacing }};
                   text-transform: {{ section.settings.text_transform }};">
        {{ section.settings.text }}
      </span>
    </marquee3k>
  </div>
</section>

<style>
.custom-marquee-section {
  padding: 1.5rem 0;
}
.custom-marquee {
  width: 100%;
  display: block;
  white-space: nowrap;
  overflow: hidden;
}
</style>

{% schema %}
{
  "name": "Custom Marquee",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Marquee Text",
      "default": "ðŸŒˆ Welcome to our shop! Enjoy free shipping ðŸšš and new arrivals! ðŸ’–"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1f51ff"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color (fallback)",
      "default": "#ffd1dc"
    },
    {
      "type": "text",
      "id": "bg_gradient",
      "label": "Background Gradient (CSS, optional)",
      "default": "linear-gradient(90deg, #ffd1dc 0%, #b5d0ff 100%)"
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Scroll Speed (lower is faster)",
      "min": 0.5,
      "max": 10,
      "step": 0.1,
      "default": 2
    },
    {
      "type": "text",
      "id": "font_size",
      "label": "Font Size (e.g. 1.5rem, 24px)",
      "default": "1.5rem"
    },
    {
      "type": "text",
      "id": "font_family",
      "label": "Font Family (e.g. Arial, 'Comic Sans MS', cursive)",
      "default": "inherit"
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font Weight",
      "options": [
        {"value": "400", "label": "Normal"},
        {"value": "500", "label": "Medium"},
        {"value": "700", "label": "Bold"},
        {"value": "900", "label": "Extra Bold"}
      ],
      "default": "400"
    },
    {
      "type": "text",
      "id": "letter_spacing",
      "label": "Letter Spacing (e.g. 0.05em, 2px)",
      "default": "normal"
    },
    {
      "type": "select",
      "id": "text_transform",
      "label": "Text Transform",
      "options": [
        {"value": "none", "label": "None"},
        {"value": "uppercase", "label": "UPPERCASE"},
        {"value": "lowercase", "label": "lowercase"},
        {"value": "capitalize", "label": "Capitalize"}
      ],
      "default": "none"
    }
  ],
  "presets": [
    {
      "name": "Custom Marquee",
      "category": "Text"
    }
  ]
}
{% endschema %}
