{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

    .section-{{ section.id }}-padding.marquee__wrapper {
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
    }

   .section-{{ section.id }}-padding .marquee3k__copy {
      box-sizing: border-box;
      padding-right: {{ section.settings.gap_size }}px;
      font-size: {{ section.settings.font_size }}rem;
    }

   .section-{{ section.id }}-padding  .marquee3k__copy p, 
   .section-{{ section.id }}-padding  .marquee3k__copy h1, 
   .section-{{ section.id }}-padding  .marquee3k__copy h2,  
   .section-{{ section.id }}-padding  .marquee3k__copy h3, 
   .section-{{ section.id }}-padding  .marquee3k__copy h4,
   .section-{{ section.id }}-padding  .marquee3k__copy h5, 
   .section-{{ section.id }}-padding  .marquee3k__copy h6 {
      color: {{ section.settings.text_color }};
      letter-spacing: {{ section.settings.letter_spacing }}px;
      padding: 0;
      margin: 0;
    }

  {%- endstyle -%}
  
<div class="section-{{ section.id }}-padding marquee__wrapper">
  <div class="marquee3k" 
        data-speed="{{ section.settings.speed_range }}"
        data-reverse="{{ section.settings.reverse_direction }}"
        data-pausable="{{ section.settings.pause_marquee }}" >
        <span>{{ section.settings.text }}</span>    
    </div>
</div>


<script src="{{ 'marquee3k.min.js' | asset_url }}"></script>
<script>
   Marquee3k.init(); 
</script>


{% schema %}
{
   "name": "t:sections.marquee.name",
   "tag": "section",
   "class": "section",
   "settings": [
     
   {
    "type": "richtext",
    "id": "text",
    "label": "t:sections.image-banner.blocks.text.name",
    "default": "<p>Marquee</p>"
    },
     
    {
      "type":"range",
      "id": "speed_range",
      "label": "t:sections.marquee.settings.speed_range.label",
      "min": 0.1,
      "max": 10,
      "step": 0.1,
      "default": 1,
      "unit":"s"
    },
    {
      "type": "checkbox",
      "id": "pause_marquee",
      "label": "t:sections.marquee.settings.pause_marquee.label",
      "default": false
    },
     {
       "type": "checkbox",
       "id": "reverse_direction",
       "label": "t:sections.marquee.settings.reverse_direction.label",
       "default": false
     },
     {
       "type": "color",
       "id": "text_color",
       "label": "t:sections.marquee.settings.text_color.label",
       "default": "#FFFFFF"
     },
     {
       "type": "color",
       "id": "background_color",
       "label": "t:sections.marquee.settings.background_color.label",
       "default": "#000000"
     },
     {
       "type": "range",
       "id": "font_size",
       "label": "t:sections.marquee.settings.font_size.label",
       "min": 1,
       "max": 20,
       "step": 0.5,
       "default": 2
     },
        {
      "type": "range",
      "id": "letter_spacing",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.marquee.settings.letter_spacing.label",
      "default": 0
    },
     {
       "type": "range",
       "id": "gap_size",
       "label": "t:sections.marquee.settings.gap_size.label",
       "min": 1,
       "max": 100,
       "step": 1,
       "unit": "px",
       "default": 8
     },
      {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
     },
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 12
    }
   ],
   "presets": [
   {
      "name": "Marquee Section"
   }
   ]
}
{% endschema %}